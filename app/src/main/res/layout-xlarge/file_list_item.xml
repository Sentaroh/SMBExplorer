<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/file_list_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:ignore="SpUsage,ContentDescription,NestedWeights" >

    <ImageView
        android:id="@+id/file_list_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

	<TextView
		android:id="@+id/file_list_name"
		android:layout_width="0dp"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:text="name"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/file_list_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="5 item"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/file_list_size"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="size"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/file_list_select_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/file_list_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="3dp"
            android:text="date"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/file_list_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="time"
            android:textSize="15sp"
            />
	
	    <CheckBox
	        android:id="@+id/file_list_checkbox"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center_vertical"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:text="" />
	
	    <RadioButton
	        android:id="@+id/file_list_radiobtn"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center_horizontal|center_vertical"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:text="" />
        
	</LinearLayout>        
    
</LinearLayout>